<!DOCTYPE web-app PUBLIC
        "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
        "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
    <display-name>Web Application</display-name>
    <servlet>
        <servlet-name>Login</servlet-name>
        <servlet-class>servlet.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Login</servlet-name>
        <url-pattern>/index.html</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>add</servlet-name>
        <servlet-class>servlet.AddUser</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>add</servlet-name>
        <url-pattern>/add</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>user</servlet-name>
        <servlet-class>servlet.UserServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>user</servlet-name>
        <url-pattern>/user.html</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>admin</servlet-name>
        <servlet-class>servlet.AdminServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>admin</servlet-name>
        <url-pattern>/admin.html</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>addFlight</servlet-name>
        <servlet-class>servlet.NewFlightServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>addFlight</servlet-name>
        <url-pattern>/addFlight</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>addCity</servlet-name>
        <servlet-class>servlet.NewCityServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>addCity</servlet-name>
        <url-pattern>/addCity</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>deleteFlight</servlet-name>
        <servlet-class>servlet.DeleteFlightServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>deleteFlight</servlet-name>
        <url-pattern>/deleteFlight</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>getLocalTimes</servlet-name>
        <servlet-class>servlet.LocalTimesServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>getLocalTimes</servlet-name>
        <url-pattern>/getLocalTimes</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>searchFlight</servlet-name>
        <servlet-class>servlet.SearchFlightServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>searchFlight</servlet-name>
        <url-pattern>/searchFlight</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>updateFlight</servlet-name>
        <servlet-class>servlet.UpdateFlightServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>updateFlight</servlet-name>
        <url-pattern>/updateFlight</url-pattern>
    </servlet-mapping>
</web-app>
